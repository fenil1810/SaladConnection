<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spicy_potato_desc"
    android:layout_width="match_parent"
    android:background="#FFF5EE"
    android:layout_height="wrap_content"
    tools:context="com.example.android.saladconnection.SpicyPotatoDesc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        style="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/spicy_potato1"
            android:layout_marginBottom="292dp"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout2">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            style="@style/AppTheme"
            android:text="Fresh spicy potato with chopped green olives,grated carrot,lettuce garnished with pomegranate"
            android:id="@+id/textView21"
            android:textSize="30dp"
            android:layout_marginBottom="169dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout"
            android:layout_alignParentBottom="true"
            android:weightSum="2">
            <Button
                android:background="@drawable/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/AppTheme"
                android:id="@+id/button"
                android:onClick="ordersoup"
                android:layout_weight="1"
                android:text="ADD TO CART"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:background="@drawable/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@style/AppTheme"
                android:layout_weight="1"
                android:id="@+id/button2"
                android:onClick="cart"
                android:text="CART"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

        <TextView
            android:text="â‚¹69/-"
            android:textSize="30dp"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_textview"
            android:layout_alignBaseline="@+id/price"
            android:layout_alignBottom="@+id/price"
            android:layout_toEndOf="@+id/price"
            android:layout_marginStart="11dp" />

        <TextView
            android:text="1"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:padding="10dp"
            android:id="@+id/quantity_textview"
            android:layout_alignBottom="@+id/increment"
            android:layout_toStartOf="@+id/increment" />

        <Button
            android:text="+"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/increment"
            android:textSize="40dp"
            android:onClick="increment"
            android:background="@drawable/button"
            android:layout_marginBottom="26dp"
            android:layout_above="@+id/linearlayout"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="-"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/decrement"
            android:textSize="40dp"
            android:onClick="decrement"
            android:background="@drawable/button"
            android:layout_alignBottom="@+id/quantity_textview"
            android:layout_toStartOf="@+id/quantity_textview" />

        <TextView
            android:text="Price:"
            android:textSize="35dp"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:id="@+id/price"
            android:layout_alignBottom="@+id/decrement"
            android:layout_toEndOf="@+id/linearLayout2" />

    </RelativeLayout>
</RelativeLayout>
