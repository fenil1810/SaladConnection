<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#FFF5EE"
        style="@style/AppTheme"
        tools:context="com.example.android.saladconnection.SaladActivity"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="SALADS"
            style="@style/AppTheme"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/soya_chunks"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotosoya"
                android:text="Soya Chunks Salad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/spicy_potato1"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Spicy Potato Salad"
                android:onClick="gotoSPdesc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/sprout_salad"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Spartan Sprout Salad"
                android:onClick="gotoSpDesc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/bean"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotobean"
                android:text="Bean Salad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/chickpea"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotoChickPeas"
                android:text="Chickpeas Salad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/brown_rice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Brown Rice Salad"
                android:onClick="gotoBRDesc"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/chiaseed"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Chiaseed Salad"
                android:onClick="gotoCSDesc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/superfood"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Superfood Salad"
                android:onClick="gotoSSDesc"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:background="#8B4513"
                android:layout_height="75dp"
                android:src="@drawable/tofu2"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Detox Salad"
                android:onClick="gotoDSDesc"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


