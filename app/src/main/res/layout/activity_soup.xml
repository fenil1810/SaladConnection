<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        style="@style/AppTheme"
        tools:context="com.example.android.saladconnection.SaladActivity"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="SOUPS"
            style="@style/AppTheme"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/laukisoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Lauki Soup"
                android:onClick="gotolauki"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/beetsoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotobeet"
                android:text="Beet Soup"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/carrotsoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotocarrot"
                android:text="Carrot Soup"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/cauliflowersoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Cauliflower Soup"
                android:onClick="gotocauliflower"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/karelasoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Karela Soup"
                android:onClick="gotokarela"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:src="@drawable/cabbagesoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Cabbage Soup"
                android:onClick="gotocabbage"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/broccolisoup"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Broccoli Soup"
                android:onClick="gotobroccoli"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>


