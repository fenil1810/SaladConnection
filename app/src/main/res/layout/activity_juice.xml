<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#FFF5EE"
        style="@style/AppTheme"
        tools:context="com.example.android.saladconnection.SaladActivity"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="JUICES"
            style="@style/AppTheme"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/watermelonbasiljuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotowatermelon"
                android:text="Watermelon Basil Juice"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <ImageView
                android:layout_width="80dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/orangejuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Orange Flaxseed Juice"
                android:onClick="gotoorange"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/chikooshake"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Chikoo Milkshake"
                android:onClick="gotochikoo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/pineapplejuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotopineapple"
                android:text="Pineapple Aniseed Jucie"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/applejuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:onClick="gotoapple"
                android:text="Apple Cumin Juice"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button">

            <ImageView
                android:layout_width="80dp"
                android:padding="1dp"
                android:layout_height="75dp"
                android:src="@drawable/pomogranatejuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Pomegranate Juice"
                android:onClick="gotopomegranate"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:padding="1dp"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:src="@drawable/kiwijuice"/>
            <TextView
                style="@style/AppTheme"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Kiwi Cardamom Juice"
                android:onClick="gotokiwi"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>


